{
  "name": "@andrewscwei/mongodb-odm",
  "version": "0.52.0",
  "description": "ODM for MongoDB",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc",
    "test:ts": "DEBUG=mongodb-odm* mocha --require ts-node/register --timeout 10000 --reporter spec --full-trace --colors --recursive --bail --exit \"src/**/*.spec.ts\"",
    "test": "DEBUG=mongodb-odm* mocha --timeout 10000 --reporter spec --full-trace --colors --recursive --exit $([ -z \"$npm_config_path\" ] && echo build/**/*.spec.js || echo $npm_config_path)",
    "db": "docker run --name node-mongodb-odm-db -d --rm -p 27017:27017 -v ${PWD}/.data/db:/data/db mongo:4.0.4",
    "db:stop": "docker stop node-mongodb-odm-db",
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/node-mongodb-odm.git"
  },
  "keywords": [
    "mongodb",
    "odm"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewscwei/node-mongodb-odm/issues"
  },
  "homepage": "https://github.com/andrewscwei/node-mongodb-odm#readme",
  "files": [
    "build",
    "index.d.ts"
  ],
  "dependencies": {
    "@sindresorhus/is": "^0.15.0",
    "@types/mongodb": "^3.1.23",
    "bcrypt": "^3.0.6",
    "debug": "^4.1.1",
    "lodash": "^4.17.11",
    "mongodb": "^3.2.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/debug": "^4.1.4",
    "@types/dotenv": "^6.1.1",
    "@types/faker": "^4.1.5",
    "@types/lodash": "^4.14.123",
    "@types/mocha": "^5.2.6",
    "dotenv": "^7.0.0",
    "faker": "^4.1.0",
    "mocha": "^6.1.3",
    "rimraf": "^2.6.3",
    "ts-node": "^8.1.0",
    "tslint": "^5.15.0",
    "typescript": "3.4.3"
  },
  "types": "build/index.d.ts"
}
